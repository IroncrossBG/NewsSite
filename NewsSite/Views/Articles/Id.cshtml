@model NewsSite.Models.View.ArticleViewModel
@using Ganss.XSS;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@{
    var sanitizer = new HtmlSanitizer();
    ViewData["Title"] = @Model.Title;
}

<body>

    <div class="container">
        <div class="container-fluid p-0 mt-1 mb-3">

            <!-- Post Content Column -->
            <div class="col-9 pr-2 pl-0 float-left">
                <div class="row w-100">

                    <!-- Title -->
                    <h1>@Model.Title</h1>

                    <!-- Author -->
                    <p class="lead w-100">
                        by
                        <a href="#">@Model.Author</a>
                    </p>

                    <hr>

                    <!-- Date/Time -->
                    <p>@Model.CreatedOn</p>

                    <hr>

                    <img class="img-fluid rounded w-100" src="@Model.ImageUrl" alt="">

                    <hr>

                    <p class="lead">@Html.Raw(sanitizer.Sanitize(Model.Content))</p>
                    <hr>
                </div>

                <div class="row w-100">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <!-- Comments Form -->
                        <div class="card my-4 w-100">
                            <h5 class="card-header">Leave a Comment:</h5>
                            <div class="card-body">
                                <form method="post">
                                    <div class="form-group">
                                        <textarea class="form-control" rows="3" name="commentContent"></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
                @foreach (var comment in @Model.Comments)
                {
                    <div class="row w-100">
                        <div class="media mb-4">
                            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                            <div class="media-body">
                                <h5 class="mt-0">@comment.User.UserName</h5>
                                @comment.Content
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- Sidebar Widgets Column -->
            <div class="col-3 p-0 float-right">

                <vc:search></vc:search>

            </div>
        </div>
    </div>
</body>