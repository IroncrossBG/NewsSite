@model NewsSite.Models.View.ArticleViewModel

<style>
    #articleContainer {
        margin: 3px;
        padding: 3px;
        border: solid;
        border-radius: 3px;
        border-width: 1px;
        border-color: black;
        background-color: rgba(128, 128, 128, 0.05);
    }

    #articleMeta {
        font-size: 8px;
    }

    h1 {
        font-size: 20px;
        font-weight: bold;
    }

    h2 {
        font-size: 14px;
    }

    h5 {
        font-size: 10px;
    }

    hr {
        margin-top: 5px;
        margin-bottom: 5px;
    }

    p {
        font-size: 14px;
    }

    img {
        width: 100%;
    }

</style>

<body>
    <div class="col col-10" id="articleContainer">

        <h1>@Model.Title</h1>
        <h2>@Model.Subtitle</h2>
        <hr />
        <div id="articleMeta">
            <h5>
                <i class="fa fa-list-alt"></i> @Model.Category.Name
                <i class="fa fa-clock"></i> @Model.CreatedOn.ToString("dd.MM.yyyy | hh.mm")
                <i class="fa fa-eye"></i> @Model.Views
                <i class="fa fa-user"></i> @Model.Author
            </h5>
        </div>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img class="img-fluid" src="@Model.ImageUrl">
        }
        <p class="text-left">@Model.Content</p>
    </div>
</body>