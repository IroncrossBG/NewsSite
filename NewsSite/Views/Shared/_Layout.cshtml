    </header>

    <div class="container p-0">
        <main role="main" class="pb-3 flex-fill">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top navbar-fixed-bottom footer text-muted m-auto" style="background-color:black;">
        <div class="container">
            &copy; 2020 - NewsSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <script>
        function hideColumns() {
            if (window.innerWidth <= 576) {
                if ($(".rightColumn").is(":visible")) {
                    $(".rightColumn").hide();
                }
                if ($(".leftColumn").hasClass("col-9")) {
                    $(".leftColumn").removeClass("col-9");
                    $(".leftColumn").addClass("col");
                }
            } else {
                if ($(".rightColumn").is(":hidden")) {
                    $(".rightColumn").show();
                }
                if ($(".leftColumn").hasClass("col")) {
                    $(".leftColumn").removeClass("col");
                    $(".leftColumn").addClass("col-9");
                }
            }
        }

        $('.nav-tabs > li > a').hover(function () {
            $(this).tab('show');
        });

        window.onresize = hideColumns;
        window.onload = hideColumns;
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
