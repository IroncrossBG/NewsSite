@using NewsSite.Services
@using NewsSite.ViewComponents
@inject ICategoryService categoryService;
@{
    var categories = categoryService.GetAll().OrderBy(x => x.Name).ToList();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=0.5" />
    <title>@ViewData["Title"] - NewsSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/layout.css" />

</head>
<body class="d-flex flex-column">
    <header>
        <nav class="navbar main navbar-expand py-0" style="background-color:black">
            <div class="container">
                <ul class="navbar-nav">
                    <li class="navbar-brand">
                        <img style="height: 24px;" class="img-fluid" src="~/logo.png" />
                    </li>
                    <li class="nav-item">
                        <a class="nav-link social mobile mainNav" href="#" target="_blank"><i class="fas fa-mobile-alt"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link social facebook mainNav" href="#" target="_blank"><i class="fab fa-facebook"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link social twitter mainNav" href="#" target="_blank"><i class="fab fa-twitter"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link social youtube mainNav" href="#" target="_blank"><i class="fab fa-youtube"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link social rss mainNav" href="#" target="_blank"><i class="fas fa-rss-square"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link social github mainNav" href="https://github.com/IroncrossBG/NewsSite" target="_blank"><i class="fab fa-github"></i></a>
                    </li>
                </ul>
                <partial name="_loginPartial.cshtml">
            </div>
        </nav>

        <nav class="navbar category navbar-expand py-0">
            <div class="container w-100">
                <ul class="navbar-nav mx-auto w-100">
                    <li class="nav-item" style="width:2.5%">
                        <a class="nav-link category active py-3" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i></a>
                    </li>

                    @foreach (var item in categories)
                    {
                        <li class="nav-item dropdown overflow-hidden w-auto">
                            <a class="nav-link mainNav font-weight-bold py-3" asp-controller="Categories" asp-action="Index" asp-route-name="@item.Name">@item.Name.ToUpper()</a>
                        </li>
                    }

                    @*<li class="nav-item dropdown">
            <a class="nav-link mainNav" data-toggle="dropdown" href="#" aria-haspopup="true" aria-expanded="false">ЛАЙФСТАЙЛ</a>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="#">Action</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Separated link</a>
            </div>
        </li>*@

                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3 flex-fill">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top navbar-fixed-bottom footer text-muted m-auto" style="background-color:black;" >
        <div class="container">
            &copy; 2020 - NewsSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <script>
        $('.nav-tabs > li > a').hover(function () {
            $(this).tab('show');
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
