<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/layout.css" />

</head>
<body>
    <header>
        <nav class="navbar main navbar-expand py-0">
            <div class="container">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link social mobile" href="#" target="_blank"><i class="fas fa-mobile-alt"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link social facebook" href="#"target="_blank"><i class="fab fa-facebook"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link social twitter" href="#" target="_blank"><i class="fab fa-twitter"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link social youtube" href="#" target="_blank"><i class="fab fa-youtube"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link social rss" href="#" target="_blank"><i class="fas fa-rss-square"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link social github" href="https://github.com/IroncrossBG/NewsSite" target="_blank"><i class="fab fa-github"></i></a>
                    </li>
                </ul>
                <partial name="_loginPartial.cshtml">
            </div>
        </nav>

        <nav class="navbar logo navbar-expand py-0">
            <div class="container">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <img style="width: 50%; display: block;" src="~/logo.png">
                    </li>
                </ul>
            </div>
        </nav>

        <nav class="navbar category navbar-expand py-0">
            <div class="container">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link category" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link category active" href="#">НОВИНИ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link category" href="#">БЪЛГАРИЯ</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link category" href="#">СВЯТ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link category" href="#">ПОЛИТИКА</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link category" href="#">КРИМИНАЛНИ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link category" href="#">ИКОНОМИКА</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link category" href="#">МНЕНИЯ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link category" href="#">РЕГИОНАЛНИ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link category" href="#">НАУКА</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link category" href="#">СПОРТ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link category" href="#">ЗДРАВЕ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link category" href="#">КУЛТУРА</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link category" href="#">ЛАФЙСТАЙЛ</i></a>
                    </li>
                </ul>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - NewsSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
