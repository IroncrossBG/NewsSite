    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/layout.css" />

</head>
<body class="d-flex flex-column">
    <header>
        <nav class="navbar main navbar-expand py-0" style="background-color:black">
            <div class="container">
